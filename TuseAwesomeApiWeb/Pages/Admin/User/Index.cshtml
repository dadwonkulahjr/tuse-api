@page
@model TuseAwesomeApiWeb.Pages.Admin.User.IndexModel
@{
}


<div class="border backgroundWhite container shadow">
    <div class="row">
        <div class="col-9 text-nowrap">
            <h2 class="text-success">
                <i class="bi bi-cloud-plus"></i>&nbsp;Add Users to the Database
            </h2>
        </div>


    </div>
    <hr />
    @if (Model.Users.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="bg-success text-white">
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Password</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>
                                @user.Username
                            </td>
                            <td>
                                @user.Email
                            </td>
                            <td>
                                @user.Password
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="card-deck">
            <div class="card">

                <div class="card-header bg-success text-white">
                    <h3 class="card-text">
                        No record has been added.
                    </h3>
                </div>
                <div class="card-body">
                    <p class="card-title text-success">
                        Click on the button below to create new record.
                        &nbsp;<i class="bi bi-arrow-down"></i>
                    </p>
                </div>
                <div class="card-footer">

                    <a class="btn btn-success form-control">
                        <i class="bi bi-plus-square"></i>&nbsp;Create new record
                    </a>

                </div>
            </div>
        </div>
    }




</div>